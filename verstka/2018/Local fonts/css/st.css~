	0% { height: 0; filter: opacity(0); }
	1% { height: 100%; filter: opacity(0); }
	10% { height: 100%; filter: opacity(100%); }
	90% { height: 100%;	filter: opacity(100%); }
	99% { height: 100%;	filter: opacity(0); }
	100% { height: 0; filter: opacity(0); } }

